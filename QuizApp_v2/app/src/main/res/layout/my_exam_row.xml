<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/idExamTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="12dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/questionExamTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/idExamTxt"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonOpt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="opt1"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/idExamTxt"
                app:layout_constraintTop_toBottomOf="@+id/idExamTxt" />

            <Button
                android:id="@+id/buttonOpt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="opt2"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/idExamTxt"
                app:layout_constraintTop_toBottomOf="@+id/buttonOpt1" />

            <Button
                android:id="@+id/buttonOpt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="opt3"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/buttonOpt2"
                app:layout_constraintTop_toBottomOf="@+id/buttonOpt2" />

            <Button
                android:id="@+id/buttonOpt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="opt4"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/buttonOpt3"
                app:layout_constraintTop_toBottomOf="@+id/buttonOpt3" />

            <ImageView
                android:id="@+id/imageViewCorrectOpt1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/buttonOpt1"
                app:layout_constraintStart_toEndOf="@+id/buttonOpt1"
                app:layout_constraintTop_toBottomOf="@+id/questionExamTxt"
                app:srcCompat="@drawable/check" />

            <ImageView
                android:id="@+id/imageViewCorrectOpt2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/buttonOpt2"
                app:layout_constraintStart_toEndOf="@+id/buttonOpt2"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCorrectOpt1"
                app:srcCompat="@drawable/check" />


            <ImageView
                android:id="@+id/imageViewCorrectOpt3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/buttonOpt3"
                app:layout_constraintStart_toEndOf="@+id/buttonOpt3"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCorrectOpt2"
                app:srcCompat="@drawable/check" />


            <ImageView
                android:id="@+id/imageViewCorrectOpt4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/buttonOpt4"
                app:layout_constraintStart_toEndOf="@+id/buttonOpt4"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCorrectOpt3"
                app:srcCompat="@drawable/check" />

            <ImageView
                android:id="@+id/imageViewWrongOpt1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCorrectOpt1"
                app:layout_constraintStart_toEndOf="@+id/imageViewCorrectOpt1"
                app:layout_constraintTop_toTopOf="@+id/imageViewCorrectOpt1"
                app:srcCompat="@drawable/mark" />

            <ImageView
                android:id="@+id/imageViewWrongOpt2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCorrectOpt2"
                app:layout_constraintStart_toEndOf="@+id/imageViewCorrectOpt2"
                app:layout_constraintTop_toTopOf="@+id/imageViewCorrectOpt2"
                app:srcCompat="@drawable/mark" />

            <ImageView
                android:id="@+id/imageViewWrongOpt3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCorrectOpt3"
                app:layout_constraintStart_toEndOf="@+id/imageViewCorrectOpt3"
                app:layout_constraintTop_toTopOf="@+id/imageViewCorrectOpt3"
                app:srcCompat="@drawable/mark" />

            <ImageView
                android:id="@+id/imageViewWrongOpt4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCorrectOpt4"
                app:layout_constraintStart_toEndOf="@+id/imageViewCorrectOpt4"
                app:layout_constraintTop_toTopOf="@+id/imageViewCorrectOpt4"
                app:srcCompat="@drawable/mark" />

            <TextView
                android:id="@+id/examAnswerTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>